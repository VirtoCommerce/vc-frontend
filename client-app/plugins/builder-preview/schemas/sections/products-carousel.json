{
  "name": "Products carousel",
  "icon": "view_carousel",
  "displayField": "title",
  "settings": [
    {
      "id": "title",
      "label": "Title",
      "type": "string",
      "tab": "Content"
    },
    {
      "id": "subtitle",
      "label": "Subtitle",
      "type": "string",
      "multiline": true,
      "tab": "Content"
    },
    {
      "id": "cardType",
      "label": "Card type",
