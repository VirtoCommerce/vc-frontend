    {
      "id": "title",
      "label": "Title",
      "type": "object",
      "default": {
        "text": "Products Block"
      },
      "element": [
        {
          "id": "text",
          "label": "Text",
          "type": "string"
        },
        {
          "id": "color",
          "label": "Text color",
          "type": "color"
        }
      ]
    },
    {
      "id": "subtitle",
      "label": "Subtitle",
      "type": "object",
      "default": {
        "text": "Subtitle",
