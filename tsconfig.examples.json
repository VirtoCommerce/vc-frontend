{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["examples/**/*", "client-app/**/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.examples.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node", "jsdom"],
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./client-app/*"]
    }
  }
}
