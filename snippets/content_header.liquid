<header id="header1">
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ "/" | absolute_url }}">{{ "common.header.home" | t }}</a>
        <button aria-controls="navbarTogglerMenu" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbarTogglerMenu" data-toggle="collapse" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerMenu">
            <ul class="navbar-nav">
                {% include 'site-nav' %}
            </ul>
            <ul class="navbar-nav ml-auto">
                <li>
                  <span id="app-cart"></span>
                </li>
                <li class="nav-item">
                    {% if customer.is_registered_user %}
                        <a href="{{ 'account' | absolute_url }}" class="nav-link">
                            {% if customer.operator_user_id != null %}
                                {{ "common.header.logged_in.on_behalf" | t }}
                            {% else %}
                                {{ "common.header.logged_in.as" | t }}
                            {% endif %}
                            {{ customer.user_name }}
                        </a>
                    {% else %}
                        <a href="{{ 'account/login' | absolute_url }}" class="nav-link">
                            {{ "common.header.sign_in" | t }}
                        </a>
                    {% endif %}
                </li>
                {% if customer.is_registered_user %}
                    <li class="nav-item">
                        <a href="{{ 'account/logout' | absolute_url }}" class="nav-link">{{ "common.header.log_out" | t }}
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>
