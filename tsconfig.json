{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "composite": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "@/*": ["client-app/*"]
    },
    "types": []
  },
  "include": ["client-app/**/*.ts", "client-app/**/*.json", "client-app/**/*.vue", "**/*.json"],
  "exclude": ["node_modules", "artifacts", "assets", "content", "layout", "templates", "**/.*/", "**/.*", "**/*.js"]
}
