{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@/*": ["client-app/*"]
    },
    "types": [
      "node",
      "vite/client",
      "@types/gtag.js"
    ]
  },
  "include": [
    "client-app/**/*.ts",
    "client-app/**/*.json",
    "client-app/**/*.vue",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "assets",
    "content",
    "layout",
    "templates",
    "**/.*/",
    "**/.*",
    "**/*.js"
  ]
}
