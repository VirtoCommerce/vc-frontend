{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@/*": [
        "client-app/*"
      ],
      "@core/*": [
        "client-app/core/*"
      ]
    }
  },
  "include": [
    "client-app/**/*.ts",
    "client-app/**/*.d.ts",
    "client-app/**/*.tsx",
    "client-app/**/*.vue",
    "client-app/**/*.graphql"
  ],
  "exclude": [
    "_references/**/*.ts",
    "_references/**/*.d.ts",
    "_references/**/*.tsx",
    "_references/**/*.vue"
  ]
}
