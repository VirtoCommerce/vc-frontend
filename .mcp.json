{
  "mcpServers": {
    "chrome-devtools": {
      "command": "pnpx",
      "args": ["chrome-devtools-mcp@latest"]
    },
    "figma": {
      "type": "http",
      "url": "https://mcp.figma.com/mcp"
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "claude-code",
        "--project-from-cwd",
        "--enable-web-dashboard",
        "true",
        "--open-web-dashboard",
        "false"
      ]
    },
    "atlassian": {
      "type": "sse",
      "url": "https://mcp.atlassian.com/v1/mcp"
    }
  }
}
