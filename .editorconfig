# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{vue,js,ts,scss}]
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.svg]
insert_final_newline = false
